{
  "name": "monorepo",
  "packageManager": "yarn@3.2.0",
  "scripts": {
    "common": "yarn workspace @mono/common",
    "server": "yarn workspace @mono/server",
    "app": "yarn workspace @mono/react_app",
    "build_pkg": "yarn workspace @mono/server build; yarn workspace @mono/common build; yarn workspace @mono/react_app build"
  },
  "devDependencies": {
    "typescript": "^4.6.3"
  },
  "workspaces": {
    "packages": [
      "package/*"
    ]
  }
}
